#include "main.h"

/**
 * print_hex_width - prints the width of the xex digit
 * @ptr: the pointer 
 * @width: input width
 * @pad_char: initial padding
 * Return: number of chars printed
 */
int print_hex_width(uintptr_t ptr, int width, char pad_char)
{

int i, padding;
int num_chars = pointer_to_hex(ptr, buf);

padding = width - num_chars;
if (padding > 0)
{
for (i = 0; i < padding; i++)
{
_putchar(pad_char);
}
}

for (i = 0; i < num_chars; i++)
{
_putchar(buf[i]);
}

return num_chars;
}
